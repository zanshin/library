<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title><%= render_partial :title %> - <%= @subhead %></title>
    
		<link rel="stylesheet" href="/css/bootstrap.min.css">
		<link rel="stylesheet" href="/css/style.css">
		<!-- <link rel="stylesheet" href="/bootstrap-responsive.css" > -->
	</head>
	
	<body>
    <!-- Part 1: Wrap all page content here -->
    <div id="wrap">

        <!-- Begin page content -->
        <div class="container">
            <p class="text-right"><a href="/login">Log in</a></p>
            <div class="page-header">
                <h1><%= render_partial :title %> <small><%= @subhead %></small></h1>
            </div>
            <div class="navbar">
              <div class="navbar-inner">
                <a class="brand" href="/">Library</a>
                <ul class="nav">
                  <li class="divider-vertical"></li>
                  <li><a href="/">Home</a></li>
                  <li class="divider-vertical"></li>
                  <li><a href="/add">Add item</a></li>
                  <li class="divider-vertical"></li>
                  
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Sort
                      <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><a href="/sort/composer">Composer</a></li>
                      <li><a href="/sort/composition">Composition</a></li>
                      <li><a href="/sort/edition">Publisher</a></li>
                      <li><a href="/sort/type">Format</a></li>
                      <li class="divider"></li>
                      <li><a href="/">Entry order</a></li>
                    </ul>
                  </li>
                  <li class="divider-vertical"></li>
                </ul>
                <form class="navbar-search pull-right" action="/search" method="get">
                    <input type="text" class="search-query" name="query" placeholder="Search">
                </form>
              </div>
            </div>
            <div id="main">
                <%= yield %>
            </div>
        </div>
    </div>

    <div id="footer">
      <div class="container">
        <p class="muted credit">Copyright 2013 <a href="http://markhnichols.com">Mark Nichols</a> </p>
      </div>
    </div>

    <!-- Placed at the end of the document so the pages load faster -->
    // <script src="/bootstrap.min.js"></script>
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>

  </body>
</html>

