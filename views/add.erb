<section id="add">
    <form class="form-horizontal" action="/" method="post">
        <div class="control-group">
            <label class="control-label" for="type">Format</label>
            <div class="controls">
                <select name="type" placeholder="Select a type">
                    <optgroup label="Format">
                        <option value="Textbook">Textbook</option>
                        <option value="Collection">Collection</option>
                        <option value="Sheet">Sheet music</option>
                        <option value="Method book">Method book</option>
                        <option value="Book">Book</option>
                        <option value="CD">Audio CD</option>
                    </optgroup>
                </select>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="composer">Composer</label>
            <div class="controls">
                <input class="input-xlarge" type="text" name="composer" placeholder="Composer">
            </div>
        </div>
        <div class="control-group"> 
            <label class="control-label" for="composition">Composition</label>
            <div class="controls">
                <input class="input-xxlarge" type="text" name="composition" placeholder="Composition">
            </div>
        </div>
        <div class="control-group"> 
            <label class="control-label" for="edition">Publisher</label>
            <div class="controls">
                <input class="input-xlarge" type="text" name="edition" placeholder="Publisher">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="editor">Editor</label>
            <div class="controls">
                <input class="input-xlarge" type="text" name="editor" placeholder="Editor">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="price">Purchase price</label>
            <div class="controls">
                <input class="input-small" type="text" name="price" placeholder="Price" pattern="^\d+\.\d{2}$">
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button class="btn btn-primary" type="submit" class="btn">Add</button>
                <a class="btn btn-info" href="/">Cancel</a>
            </div>
        </div>

    </form>
</section>
