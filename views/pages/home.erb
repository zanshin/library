
<table class="table table-hover table-condensed tablesorter table-striped" width="100%">
    <thead><tr>
        <th>Composition or Title <br> Composer or Author</th>
        <th>Publisher <br> Editor</th>
        <th>Format <br> Price</th>
        <th>Date <br> &nbsp;</th>
    </tr></thead>
    <tbody>
    
    <% @books.each do |book| %>

    <tr>
        <td><em><%= book.composition %></em> <br> <%= book.composer %></td>
        <td><%= book.edition %> <br> <%= book.editor %></td>
        <td><%= book.type %> <br> <%= "%.2f" % book.purchase_price %></td>
        <td><small><%= book.created_at %></small> <br> <small><a class="text-info" href="/<%= book.id %>">edit</a></small></td>
    </tr>

    <% end %>

    </tbody>
</table>

<p class="text-center">Currently displaying <%= @items %> of <%= @totalitems %> items. Valued at $<%= "%.2f" % @valuation %>.</p>
